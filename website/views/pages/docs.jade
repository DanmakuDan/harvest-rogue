extends ../layout.jade

block lead

block content
   div(class="ui container")
      - if(title != null && data != null)
         h2(class="ui header")= title
         div(class="ui raised text segment message")
            |!{data}
         
      - if((everyauth.loggedIn) && (everyauth.user.CanEditDocs == true))
         h2(class="ui header") Edit Page
         div(class="ui raised text segment message")
            form(class="ui form" method="post")
               input(type="hidden" name="isNew" value="#{isNew}")
               div(class="field")
                  label Caption
                  input(type="text" name="pageTitle" placeholder="Page Title")
               div(class="field")
                  label Page Content
                  textarea(rows=20 name="pageContent")
               button(class="ui button" type="submit") Save Changes