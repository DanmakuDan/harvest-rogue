extends ../layout.jade

block lead

block content
   div(class="ui container")
      h2(class="ui header") Forum - #{forumName}
      div(class="ui raised text segment message")
         - if (everyauth.loggedIn)
            a(class="ui primary labeled icon button" href="/forum/#{forumName}/newpost") Post a new topic 
               i(class="add square icon")
            
         div(class="ui relaxed divided list")
            - for post in posts
               div(class="item")
                  i(class="large write middle aligned icon")
                  div(class="content")
                     a(class="header" href="/forum/posts/#{post.Id}")= post.Title
                     div(class="description") Posted on #{post.toISOString()}